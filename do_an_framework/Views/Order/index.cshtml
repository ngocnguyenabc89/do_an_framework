<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-primary font-weight-bold">Đơn Hàng</h1>
</div>

<!-- Page Body -->
<div class="card">
    <div class="card-body">

        <!-- Content Row -->
        <h4>Danh Sách</h4>
        <!-- Content Row -->
        <div class="row">
            <!-- Table -->
            <div class="col-md-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Tình Trạng</th>
                            <th>Ngày Đặt Hàng</th>
                            <th>Đơn Hàng</th>
                            <th>Khách Hàng</th>
                            <th>Địa Chỉ</th>
                            <th>Ngày Giao Hàng</th>
                            <th>Tổng Tiền</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        @{
                                            if (order.status == 0)
                                            {
                                                <span class="text-white bg-secondary p-1">hủy</span>
                                            }
                                            else if (order.status == 1)
                                            {
                                                <span class="text-white bg-warning p-1">đang chờ</span>
                                            }
                                            else if (order.status == 2)
                                            {
                                                <span class="text-white bg-primary p-1">xác nhận</span>
                                            }
                                            else if (order.status == 3)
                                            {
                                                <span class="text-white bg-success p-1">thành công</span>
                                            }
                                        }
                                    </td>
                                    <td class="font-weight-bold">@order.order_time</td>
                                    <td class="text-center">@order.order_id</td>
                                    <td>@order.customer_name</td>
                                    <td>@order.address</td>
                                    <td class="text-primary font-weight-bold">
                                        @order.delivery_time
                                    </td>
                                    <td class="text-right text-danger font-weight-bold">
                                        @order.total
                                    </td>
                                    <td class="text-center">
                                        <a href="/admin/order/info/@order.order_id" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
